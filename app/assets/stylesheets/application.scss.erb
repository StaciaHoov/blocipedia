
@import "bootstrap-sprockets";
@import "bootstrap";

html, body,.col-md-12,.row {
  height: 100%;
}

.row > div {
  height: 100%;
}

body {
  background-image: url(<%= asset_path("8-Wolverine.png")%>);
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: center center;
  background-size: cover;
  color: black;
}

.row .col-md-3 {
  border-right-width: 5px;
  border-right-style: ridge;
  background-color: rgba(0, 0, 0, 0.3);
}

div.col-md-9 {
  padding-left: 50px;
}

a {
  color:#002B66;
}

.nav > li > a {
  padding: 7px 100px;
  font-weight: 700;
  text-transform: uppercase;
}

.nav > li > a:hover {
  background-color: #aaa;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.user-info {
  margin: 9px 30px 20px 0;
  color: #9A9A9A;
}

.nav {
    margin-top: 5px;
}

.heading-content {
  margin: auto auto;
  text-align: center;
}

.img-heading {
  display: block;
  border-width: 5px;
  border-style: ridge;
  max-width: 100%;
  max-height: 100%;
  margin: 20px auto;
}

h1.main-heading  {
  margin-top: 10px;
  font-family: 'Merriweather', serif;
  font-size: 34px;
  text-align: center;
}

h4.heading-subtext {
  text-align: center;
  margin: 30px 0px;
}

.media-body {
  margin-left: 50px;
  width: 100%;
}

h1.main-content {
  margin-top: 70px;
  font-size:32px;
}
.btn-primary {
    color: #fff;
    background-color: #002B66;
    border-color: #000050;
}

.btn-success {
    background-color: #449d44;
}

input:-webkit-autofill {
  background-color: #aaa; 
}

.collaborators_list {
    list-style-type: none;
}